<h1>Update a Figure: <%=@figure.name%></h1> 

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="new_name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>


  <label for="figure_title"><h3>Titles</h3></label>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>"<%='checked' if @figure.titles.include?(title) %>><%= title.name%><br>
  <% end %>

  <br>

  <label for="new_title">New Title</label>
  <input type="text" name="title[name]" id="new_title">

  <br>

  <label for="figure_landmark"><h3>Landmarks</h3></label>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name%><br>
  <% end %>

  <br>

  <label for="new_landmark">New Landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>

  <br>

  <input type="submit" value="Edit Figure">
    
</form>

